{%- import "./_genericModules.njk" as _genericModules with context -%}
{% set standardPadding = 'padding: '+largeSpace+'px '+mediumSpace+'px 0px '+mediumSpace+'px ' %}

{% macro Hero(module) %}
<!-- Hero -->
{% if module.layout == 'imageRight' %}
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
  <tr>
    <td align="center" style="padding-top: {{ largeSpace }}px;" class="pt{{ mediumSpace }}">
      <table dir="rtl" border="0" cellpadding="0" cellspacing="0" width="100%" style="{{- 'background-color: '+module.bgColor+';' if module.bgColor -}}{{- _genericModules.RoundedTopCSS(mediumSpace) if 'roundedTop' in module.flair -}}{{- _genericModules.RoundedBottomCSS(mediumSpace) if 'roundedBottom' in module.flair -}}" role="presentation">
        <tr>
          <td width="{{ innerWidth / 2 }}" style="" class="expand">
            {%- if 'roundedTop' in module.flair %}
            {{ _genericModules.OutlookRoundedTop(mediumSpace, colors.templateBgColor) }}
            {%- endif %}
            <table dir="ltr" border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
              <tr>
                <td align="center" class="" style="{{ _genericModules.RoundedTopCSS(mediumSpace) if 'roundedTop' in module.flair }} {{ _genericModules.RoundedBottomCSS(mediumSpace) if 'roundedBottom' in module.flair }}">
                  <a href="{{ module.link }}" target="_blank" style="color: black; text-decoration: none;">
                    <img src="http://via.placeholder.com/{{ innerWidth / 2 }}x200?text={{ module.alt }}" class="resize" width="{{ innerWidth / 2 }}" alt="{{ module.alt }}" style="display: block; border: 0;"/>
                  </a>
                </td>
              </tr>
            </table>
            {% if 'roundedBottom' in module.flair -%}
              {{ _genericModules.OutlookRoundedBottom(mediumSpace, colors.templateBgColor) }}
            {% endif %}
          </td>
          <td valign="middle" width="{{ innerWidth / 2 }}" style="" class="expand">
            <table dir="ltr" border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
              <tr>
                <td valign="middle" style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 16px; line-height: 1.2em; color: {{ colors.primaryTextColor }};padding-right: {{ mediumSpace }}px;{{- 'padding-left: '+largeSpace+'px;' if module.bgColor -}}padding-top: {{ mediumSpace }}px;padding-bottom: {{ mediumSpace }}px;" class="pt{{ mediumSpace }} {{- ' pl'+mediumSpace+' pr'+mediumSpace if module.bgColor else ' pl0 pr0' -}}">
                  {% if module.title %}
                    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
                      <tr>
                        <td style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 24px; line-height: 1.2em; color: {{ colors.primaryTextColor }}; padding-bottom: {{ smallSpace }}px;">
                          {{ module.title }}
                        </td>
                      </tr>
                    </table>
                  {% endif %}

                  {% if module.copy %}
                    {{ module.copy }}
                  {% endif %}
                </td>
              </tr>
            </table>            
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
{% elif module.layout == 'imageLeft' %}
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
  <tr>
    <td align="center" style="padding-top: {{ largeSpace }}px;" class="pt{{ mediumSpace }}">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="{{- 'background-color: '+module.bgColor+';' if module.bgColor -}}{{- _genericModules.RoundedTopCSS(mediumSpace) if 'roundedTop' in module.flair -}}{{- _genericModules.RoundedBottomCSS(mediumSpace) if 'roundedBottom' in module.flair -}}" role="presentation">
        <tr>
          <td width="{{ innerWidth / 2 }}" style="" class="expand">
            {%- if 'roundedTop' in module.flair %}
            {{ _genericModules.OutlookRoundedTop(mediumSpace, colors.templateBgColor) }}
            {%- endif %}
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
              <tr>
                <td align="center" class="" style="{{- _genericModules.RoundedTopCSS(mediumSpace) if 'roundedTop' in module.flair -}}{{- _genericModules.RoundedBottomCSS(mediumSpace) if 'roundedBottom' in module.flair -}}">
                  <a href="{{ module.link }}" target="_blank" style="color: black; text-decoration: none;">
                    <img src="http://via.placeholder.com/{{ innerWidth / 2 }}x200?text={{ module.alt }}" class="resize" width="{{ innerWidth / 2 }}" alt="{{ module.alt }}" style="display: block; border: 0;"/>
                  </a>
                </td>
              </tr>
            </table>
            {% if 'roundedBottom' in module.flair -%}
              {{ _genericModules.OutlookRoundedBottom(mediumSpace, colors.templateBgColor) }}
            {% endif %}
          </td>
          <td valign="middle" width="{{ innerWidth / 2 }}" style="" class="expand">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
              <tr>
                <td valign="middle" style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 16px; line-height: 1.2em; color: {{ colors.primaryTextColor }};padding-right: {{ mediumSpace }}px;{{- 'padding-left: '+largeSpace+'px;' if module.bgColor -}}padding-top: {{ mediumSpace }}px;padding-bottom: {{ mediumSpace }}px;" class="pt{{ mediumSpace }} {{- ' pl'+mediumSpace+' pr'+mediumSpace if module.bgColor else ' pl0 pr0' -}}">
                  {% if module.title %}
                    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
                      <tr>
                        <td style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 24px; line-height: 1.2em; color: {{ colors.primaryTextColor }}; padding-bottom: {{ smallSpace }}px;">
                          {{ module.title }}
                        </td>
                      </tr>
                    </table>
                  {% endif %}

                  {% if module.copy %}
                    {{ module.copy }}
                  {% endif %}
                </td>
              </tr>
            </table>            
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
{%- endif %}
<!-- /Hero -->
{% endmacro %}

{% macro Text(text) %}
<!-- Copy -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
  <tr>
    <td align="center" style="padding-top: {{ largeSpace }}px;" class="pt{{ mediumSpace }}">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="" role="presentation">
        <tr>
          <td width="{{ innerWidth / 2 }}" valign="top" style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 16px; line-height: 1.2em; color: {{ colors.primaryTextColor }}; padding-right: {{ mediumSpace }}px;" class="p0 expand">
            {{ text.leftCopy | default("Left Text Here", true) }}
          </td>
          <td width="{{ innerWidth / 2 }}" valign="top" style="text-align: left;font-family: calibri, arial, sans-serif; font-size: 16px; line-height: 1.2em; color: {{ colors.primaryTextColor }}; padding-right: {{ mediumSpace }}px;" class="pt{{ mediumSpace }} pr0 expand">
            {{ text.rightCopy | default("Right Text Here", true) }}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- /Copy -->
{% endmacro %}